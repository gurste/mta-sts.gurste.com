root = true

# All files
[*]
charset                  = utf-8
end_of_line              = lf
trim_trailing_whitespace = true
insert_final_newline     = true
max_line_length          = 80
indent_size              = 4
indent_style             = space

# Dependencies
# This SHOULD always be last.
[**vendor**]
charset                  = unset
end_of_line              = unset
trim_trailing_whitespace = unset
insert_final_newline     = unset
max_line_length          = unset
indent_size              = unset
indent_style             = unset
